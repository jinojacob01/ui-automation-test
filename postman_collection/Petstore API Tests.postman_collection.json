						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 12345,\n  \"name\": \"Buddy\",\n  \"photoUrls\": [\n    \"https://example.com/buddy-photo.jpg\"\n  ],\n  \"status\": \"available\"\n}"
						},
